      <!-- Additional articles would go here -->
    </div>

    <div>
      <h3 class="text-xl font-bold mb-4 border-b border-stone-300 pb-2">
        Latest Updates
      </h3>
      <ul class="space-y-4">
        for _, article := range LatestUpdates {
        <li>
          <a href="#" class="text-stone-800 hover:text-indigo-600">
            { article.Title }
